# Foxy Confidential Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# DATABASE CONFIGURATION - SECURITY CRITICAL
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=foxy_confidential
DB_USER=root
DB_PASSWORD=your_strong_password_here_minimum_16_characters

# Database pool settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ========================================
# JWT CONFIGURATION - SECURITY CRITICAL
# ========================================
# Generate a strong random string (min 64 characters recommended)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_64_characters_generate_random
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ========================================
# ADMIN CONFIGURATION - CHANGE THESE!
# ========================================
ADMIN_EMAIL=admin@foxyconfidential.com
ADMIN_PASSWORD=ChangeThisToAStrongPassword123!@#

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=5242880
FILE_UPLOAD_PATH=./uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ========================================
# RATE LIMITING - SECURITY
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW=15

# ========================================
# SESSION & COOKIES
# ========================================
SESSION_SECRET=your_session_secret_minimum_32_characters
COOKIE_MAX_AGE=86400000

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@foxyconfidential.com

# ========================================
# SECURITY HEADERS
# ========================================
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=true

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ========================================
# API KEYS (if using external services)
# ========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ========================================
# MONITORING (Optional)
# ========================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
